            <!-- <script src="https://www.paypal.com/sdk/js?client-id=AUa3WSidz8m6zrFewJpzQJZyWQZd5xnkJYQ9K-oVrZuweCDc2ahBmu_bnHu11PfL7aeIrChsXhAAGDno&disable-funding=credit,card" data-sdk-integration-source="button-factory"></script> -->
        </div>
    </div>
    <!-- /checkout -->
</body>
</html>